@using SkynetAPI.Models
@model IEnumerable<Device>

<div class="wrapper-header col-md-12">
    <div class="col-md-12">
        <h1>
            <strong>Cesar Espinosa's</strong> Living Room (Raspberry Pi)
        </h1>
        <h4>Edit or select a device</h4>
        <a class="btn btn-default" asp-area="admin" asp-controller="devices" asp-action="create" asp-route-id="@ViewData["CLIENT_ID"]">+ DEVICE</a>
        <br>
        <br>
    </div>
</div>
<div class="wrapper-header-content col-md-12">
    <div class="col-md-4">
        <h1>Devices</h1>
    </div>
</div>
<div class="wrapper-table col-md-12" style="margin-top: 0;">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th style="width: 20%;">Name</th>
                    <th style="width: 5%;">Type</th>
                    <th>Status</th>
                    <th>Pin</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var device in Model)
                {
                    <tr>
                        <td>
                            <a asp-area="admin" asp-controller="devices" asp-action="edit" asp-route-id="@device.Id">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </td>
                        <td><a class="row-name" asp-area="admin" asp-controller="devices" asp-action="edit" asp-route-id="@device.Id">@device.Name</a></td>
                        <td>
                            <img src="~/img/icons/icon_01.png" />
                        </td>
                        @{
                            if (device.Data.TryGetValue("status", StringComparison.Ordinal, out var value))
                            {
                                if (value.Value<bool>("status"))
                                {
                                    <td>ON</td>
                                }
                                else
                                {
                                    <td> OFF </td>
                                }
                            }
                        }
                        <!--FALTA AGREGAR PIN-->
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>