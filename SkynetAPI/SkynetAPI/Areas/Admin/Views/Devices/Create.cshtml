@using SkynetAPI.ViewModels;
@model DeviceVM

<div class="wrapper-header col-md-12">
    <div class="col-md-12">
        <h1>
            <strong>Cesar Espinosa's</strong> House
        </h1>
        <h4>Create a new Device</h4>
        <br>
        <br>
    </div>
</div>
<div class="wrapper-header-content wrapper-short col-md-12">
    <div class="col-md-4">
        <h1>Properties</h1>
    </div>
</div>
<div class="wrapper-content wrapper-short col-md-12">
    <div class="col-md-8 no-margin no-padding">
        <div class="wrapper-form">
            <div class="input-group">
                <h5>User:</h5>
                <h6>
                    <strong>Cesar Espinosa</strong>
                </h6>
            </div>
            <form asp-area="admin" asp-controller="devices" asp-action="create" asp-route-id="@ViewData["CLIENT_ID"]" method="post">
                <div class="form-group">
                    <div class="input-group">
                        <h5>Device Name: </h5>
                        <input asp-for="DeviceName" type="text" class="form-control" placeholder="Fan 1" aria-describedby="basic-addon1" required />
                        <br>
                    </div>
                    <div class="input-group">
                        <h5>Pin Number: </h5>
                        <input asp-for="PinNumber" type="number" class="form-control" placeholder="1-12" aria-describedby="basic-addon1" required />
                        <br>
                    </div>
                </div>
                <button type="submit" class="btn btn-default">Save</button>
            </form>
        </div>
    </div>
</div>