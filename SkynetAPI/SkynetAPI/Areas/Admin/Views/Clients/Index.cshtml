@using SkynetAPI.Models
@model IEnumerable<Client>

<div class="wrapper-header col-md-12">
    <div class="col-md-12">
        <h1>
            <strong>Cesar Espinosa's</strong> Living Room
        </h1>
        <h4>Edit or select a client</h4>
        <a class="btn btn-default" asp-area="admin" asp-controller="clients" asp-action="create" asp-route-id="@ViewData["ZONE_ID"]">+ CLIENT</a>
        <br>
        <br>
    </div>
</div>
<div class="wrapper-header-content col-md-12">
    <div class="col-md-12">
        <h1>Clients</h1>
    </div>
</div>
<div class="wrapper-table col-md-12" style="margin-top: 0;">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th># Devices</th>
                    <th>Alias</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {

                    @foreach (var client in Model)
                    {
                        <tr>
                            <td>
                                <a asp-area="admin" asp-controller="clients" asp-action="edit" asp-route-id="@client.Id"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                            </td>
                            <td><a class="row-name" asp-area="admin" asp-controller="devices" asp-action="index" asp-route-id="@client.Id">@client.Name</a></td>
                            @if(client.Devices != null)
                            {
                                <td>@client.Devices.Count</td>
                            }
                            else
                            {
                                <td>0</td>
                            }
                            <td>@client.Alias</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>